{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Business Configuration Schema",
  "description": "Schema para validar la configuración de negocio del sistema IA Comercial",
  "type": "object",
  "required": ["business", "services", "coverage", "schedule"],
  "properties": {
    "business": {
      "type": "object",
      "required": ["name", "industry"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "shortName": { "type": "string" },
        "industry": { "type": "string" },
        "description": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "website": { "type": "string", "format": "uri" }
      }
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "estimatedTime": { "type": "string" },
          "requiresVisit": { "type": "boolean" }
        }
      }
    },
    "coverage": {
      "type": "object",
      "required": ["regions", "communes"],
      "properties": {
        "regions": { "type": "array", "items": { "type": "string" } },
        "communes": { "type": "array", "items": { "type": "string" } },
        "additionalFees": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "message": { "type": "string" }
          }
        }
      }
    },
    "schedule": {
      "type": "object",
      "required": ["timezone", "workingDays"],
      "properties": {
        "timezone": { "type": "string" },
        "workingDays": { "type": "object" }
      }
    },
    "conversationStyle": {
      "type": "object",
      "properties": {
        "tone": { "type": "string" },
        "formality": { "type": "string", "enum": ["tú", "usted"] },
        "personality": { "type": "string" },
        "guidelines": { "type": "array", "items": { "type": "string" } }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["version", "clientId"],
      "properties": {
        "version": { "type": "string" },
        "createdAt": { "type": "string", "format": "date" },
        "lastUpdated": { "type": "string", "format": "date" },
        "clientId": { "type": "string" },
        "instanceType": { "type": "string", "enum": ["development", "staging", "production"] }
      }
    }
  }
}

